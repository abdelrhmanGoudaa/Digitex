<odoo>
    <record id="view_custom_report_wizard_form" model="ir.ui.view">
        <field name="name">custom.report.wizard.form</field>
        <field name="model">custom.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Custom XLS Report">
                <group>
                    <field name="date_from"/>
                    <field name="date_to"/>
                </group>
                <footer>
                    <button name="generate_xls_report" type="object" string="Generate Report" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_custom_report_wizard" model="ir.actions.act_window">
        <field name="name">Custom Report Wizard</field>
        <field name="res_model">custom.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_custom_report_wizard" name="Custom XLS Report" parent="hr.menu_hr_employee_user"
              action="action_custom_report_wizard"/>
</odoo>
